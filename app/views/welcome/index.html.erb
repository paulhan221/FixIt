<div class = "jumbotron">
<h1>Welcome to FixIt</h1>

<% if current_user %>
  <%= link_to "My concerns", user_path(current_user) %>
<% end %>

<%= form_tag("/state/concerns", method: "get") do %>
  <%= collection_select(:state, :state_id, State.all, :id, :name) %>
  <%= submit_tag "FIND" %>
<% end %>

<% if logged_in? %>
  <%= link_to "Create concern", new_concern_path %>
<% else %>
  <%= "Please log in to create a new concern" %>
<% end %>
<br />
<%= form_tag searches_path, :method => 'get' do %>
  <%= text_field_tag (:keyword) %>
  <%= submit_tag 'search' %>
<% end %>
</div>
<h3>All the concerns</h3>
<table>
  <thead>
    <tr>
      <td>Concerns</td>
      <td>Upvotes</td>
      <td>Downvotes</td>
      <td>Result</td>
      <td>Total Votes</td>

    </tr>
  </thead>
  <tbody>
    <% @concerns.each do |c| %>
      <tr>
        <td><%= link_to c.title, concern_path(c)%></td>
        <td><%= c.upvote_count %></td>
        <td><%= c.downvote_count %></td>
        <td><%= c.votes_sum %></td>
        <td><%= c.total_votes %></td>
      </tr>
    <% end %>
  </tbody>
</table>
