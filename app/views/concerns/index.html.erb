<p id="notice"><%= notice %></p>

<h1>Listing Concerns</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerns.each do |concern| %>
      <tr>
        <td><%= link_to concern.title, concern %></td>
        <% if logged_in? %>
        <td><%= link_to 'Edit', edit_concern_path(concern) %></td>
        <td><%= link_to 'Destroy', concern, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in? %>
  <%= link_to 'New Concern', new_concern_path %><br>
<% else %>
  <%= "Please Log In to Create a New Concern" %> <br>
  <%= link_to 'login', login_path %>
<% end %> <br>

<%= link_to "Back", root_path %>
